<!DOCTYPE html>
<html>
  <head>
    <title>Gaettespil</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container">
            <a class="brand" href="/">Det store EM-gættespil</a>
            <ul class="nav">
              <% if signed_in? %>
              <li>
                <%= link_to "Mit gæt", user_path( current_user ) %>
              </li>
              <li>
                <%= link_to "Grupper", groups_path %>
              </li>
              <% end %>
              <li class="divider-vertical"></li>
              <li>
                <%= link_to "Regler", rules_path %>
              </li>
              <% if signed_in? %>
                <li class="pull-right">
                  <%= link_to "Log ud", signout_path, method: :delete %>
                </li>
                <% if admin? %>
                  <li class="pull-right">
                    <%= link_to "Opdater scoren", update_scores_path %>
                  </li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div>
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
      </div>

      <%= yield %>

      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
